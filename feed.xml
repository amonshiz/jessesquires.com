---
layout: null
---

<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <link href="{{ site.feeds.rss | absolute_url }}" rel="self" type="application/atom+xml"/>

    <title>{{ site.title }}</title>
    <link href="{{ site.url }}/" />
    <subtitle>{{ site.description }}</subtitle>

    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>{{ site.url }}/</id>

    <rights>Copyright Â© 2012-{{ site.time | date: '%Y' }}, {{ site.author.name }}</rights>

    <author>
        <name>{{ site.author.name }}</name>
        <uri>{{ site.url }}/</uri>
    </author>

    <icon>{{ site.logo | absolute_url }}</icon>

    <category term="programming"/>
    <category term="ios"/>
    <category term="swift"/>
    <category term="objective-c"/>
    <category term="software design"/>
    <category term="mobile apps"/>

    {% for post in site.posts limit: site.feeds.limit %}
    <entry>
        <link href="{{ post.url | absolute_url }}" />
        <id>{{ post.url | absolute_url }}</id>

        <title>{{ post.title }}</title>

        <published>{{ post.date | date_to_xmlschema }}</published>

        {% if post.date-updated %}
        <updated>{{ post.date-updated | date_to_xmlschema }}</updated>
        {% else %}
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        {% endif %}

        {% if post.subtitle %}
        <summary type="text">{{ post.subtitle }}</summary>
        {% else %}
        <summary type="html">{{ post.excerpt | escape }}</summary>
        {% endif %}

        <content type="html" xml:base="{{ site.url }}" xml:lang="en">
            {{ post.content | escape }}
        </content>
    </entry>
    {% endfor %}
</feed>
